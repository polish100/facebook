<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h2>メッセージ一覧</h2>
      <% @users.each do |user| %>
        <div class="row">
          <% if current_user.following?(user) && current_user.followed?(user) %>
            <%= link_to user.name, conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
