<%= form_for(@topic) do |f| %>
<%= f.error_messages! %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title,class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit '投稿', class: 'btn btn-primary btn-sm'%>
  </div>
<% end %>
